<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="/views/dino.ico" type="image/x-icon">
    <title>Dinosaur Gallery</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
        }
        .container {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            margin-top: 20px;
        }
        .dino-card {
            width: 200px;
            margin: 10px;
            padding: 10px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            text-align: center;
        }
        .dino-card img {
            max-width: 100%;
            height: auto;
            border-radius: 5px;
        }
        .dino-name {
            margin-top: 10px;
            font-size: 18px;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <h1 style="text-align:center; margin-top:20px;">Dinosaur Gallery</h1>

    <div class="container">
        <% if (dinosaurs.length > 0) { %>
            <% dinosaurs.forEach(function(dino) { %>
                <div class="dino-card">
                    <img src="<%= dino.image_url %>" alt="<%= dino.name %>" />
                    <div class="dino-name"><%= dino.name %></div>
                </div>
            <% }); %>
        <% } else { %>
            <p>No dinosaurs found!</p>
        <% } %>
    </div>
</body>
</html>
